<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity7">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar8"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/turquoise"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выбери перевод"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/textView71"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_below="@+id/toolbar8"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="0dp"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar8"
        android:layout_marginStart="0dp"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="0dp"
        android:columnCount="2"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_chooset1"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_below="@+id/toolbar8"
            android:textSize="13dp"
            android:textAllCaps="true"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_chooset2"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_below="@+id/toolbar8"
            android:textSize="13dp"
            android:textAllCaps="true" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_chooset3"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_below="@+id/toolbar8"
            android:textSize="13dp"
            android:textAllCaps="true" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_chooset4"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_below="@+id/toolbar8"
            android:textSize="13dp"
            android:textAllCaps="true" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_chooset5"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_below="@+id/toolbar8"
            android:textSize="13dp"
            android:textAllCaps="true" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_chooset6"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_below="@+id/toolbar8"
            android:textSize="13dp"
            android:textAllCaps="true" />
    </GridLayout>

    <Button
        android:id="@+id/btnhelp7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/toolbar8"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-56dp"
        android:layout_marginEnd="134dp"
        android:alpha="0.0" />

</RelativeLayout>

